<div class="container py-5">
    <% if (curso) { %>
        <div class="row">
            <!-- Información del Curso -->
            <div class="col-md-8">
                <div class="card">
                    <img src="/images/curso-default.jpg" class="card-img-top" alt="<%= curso.titulo %>">
                    <div class="card-body">
                        <h1 class="card-title"><%= curso.titulo %></h1>
                        <p class="card-text"><%= curso.descripcion %></p>
                        
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h6>Categorías</h6>
                                <% curso.categoria.forEach(cat => { %>
                                    <span class="badge bg-primary me-2"><%= cat %></span>
                                <% }); %>
                            </div>
                            <div class="col-md-6">
                                <h6>Estado</h6>
                                <span class="badge bg-<%= curso.estadoCurso === 'activo' ? 'success' : 'warning' %>">
                                    <%= curso.estadoCurso %>
                                </span>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Instructor</h6>
                                <p><%= curso.owner ? curso.owner.usuario : 'Anónimo' %></p>
                            </div>
                            <div class="col-md-6">
                                <h6>Fecha de Creación</h6>
                                <p><%= new Date(curso.fechaCreacion).toLocaleDateString() %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Panel de Compra -->
            <div class="col-md-4">
                <div class="card sticky-top" style="top: 100px;">
                    <div class="card-body">
                        <h5 class="card-title">Precio del Curso</h5>
                        <div class="text-center mb-4">
                            <span class="display-4 text-success">$<%= curso.costo %></span>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <a href="/comprar/<%= curso._id %>" class="btn btn-primary btn-lg">
                                <i class="bi bi-cart-plus"></i> Comprar Ahora
                            </a>
                            <button class="btn btn-outline-primary">
                                <i class="bi bi-heart"></i> Agregar a Favoritos
                            </button>
                            <button class="btn btn-outline-secondary">
                                <i class="bi bi-share"></i> Compartir
                            </button>
                        </div>
                        
                        <hr>
                        
                        <h6>Lo que incluye:</h6>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-check-circle text-success"></i> Acceso completo al curso</li>
                            <li><i class="bi bi-check-circle text-success"></i> Certificado de finalización</li>
                            <li><i class="bi bi-check-circle text-success"></i> Soporte del instructor</li>
                            <li><i class="bi bi-check-circle text-success"></i> Acceso de por vida</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Sección de Intercambios -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Intercambios Disponibles</h5>
                    </div>
                    <div class="card-body">
                        <p>¿Tienes habilidades que puedas intercambiar por este curso?</p>
                        <a href="/intercambios" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-left-right"></i> Ver Intercambios
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Cursos Relacionados -->
        <div class="row mt-5">
            <div class="col-12">
                <h3>Cursos Relacionados</h3>
                <div class="row">
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="/images/curso-default.jpg" class="card-img-top" alt="Curso relacionado">
                            <div class="card-body">
                                <h6 class="card-title">Curso Relacionado 1</h6>
                                <p class="card-text">Descripción del curso relacionado...</p>
                                <a href="#" class="btn btn-primary btn-sm">Ver Curso</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="/images/curso-default.jpg" class="card-img-top" alt="Curso relacionado">
                            <div class="card-body">
                                <h6 class="card-title">Curso Relacionado 2</h6>
                                <p class="card-text">Descripción del curso relacionado...</p>
                                <a href="#" class="btn btn-primary btn-sm">Ver Curso</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="/images/curso-default.jpg" class="card-img-top" alt="Curso relacionado">
                            <div class="card-body">
                                <h6 class="card-title">Curso Relacionado 3</h6>
                                <p class="card-text">Descripción del curso relacionado...</p>
                                <a href="#" class="btn btn-primary btn-sm">Ver Curso</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="text-center py-5">
            <i class="bi bi-exclamation-triangle display-1 text-warning"></i>
            <h3 class="mt-3">Curso no encontrado</h3>
            <p class="text-muted">El curso que buscas no existe o ha sido eliminado.</p>
            <a href="/cursos" class="btn btn-primary">Volver a Cursos</a>
        </div>
    <% } %>
</div> 