<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#eff6ff',
                            100: '#dbeafe',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8',
                            800: '#1e40af',
                            900: '#1e3a8a'
                        },
                        secondary: {
                            50: '#f8fafc',
                            100: '#f1f5f9',
                            200: '#e2e8f0',
                            300: '#cbd5e1',
                            400: '#94a3b8',
                            500: '#64748b',
                            600: '#475569',
                            700: '#334155',
                            800: '#1e293b',
                            900: '#0f172a'
                        },
                        accent: {
                            50: '#fefce8',
                            100: '#fef9c3',
                            500: '#eab308',
                            600: '#ca8a04',
                            700: '#a16207'
                        }
                    },
                    fontFamily: {
                        'inter': ['Inter', 'sans-serif']
                    }
                }
            }
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <title><%= typeof pageTitle !== 'undefined' ? pageTitle : 'SKILLTRADE' %></title>
</head>

<body class="font-inter bg-white text-gray-900 antialiased">
    <!-- Dark mode toggle button -->
    <button id="toggle-darkmode" class="fixed bottom-5 left-5 z-50 p-3 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 dark:text-white">
        <i class="bi bi-moon-fill text-lg"></i>
    </button>

    <%- include('partials/header') %>

    <main class="min-h-screen">
        <%- body %>
    </main>

    <%- include('partials/footer') %>

    <!-- Modal de Inicio de Sesión -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content position-relative">
                <button type="button" class="btn-close position-absolute top-0 end-0 m-3 z-3"
                    data-bs-dismiss="modal" aria-label="Close"></button>

                <div class="modal-body p-5">
                    <div class="text-center mb-4 image-login-user">
                        <img class="image-user" src="/images/human-profile-purple.png"
                            alt="Foto de perfil de ejemplo">
                    </div>

                    <div class="container-title-login-modal">
                        <h5 id="loginModalLabel" class="text-center fw-bolder mb-2 title-login-modal">¡Bienvenido!</h5>
                    </div>

                    <form id="loginForm" novalidate>
                        <div class="form-group mb-3 position-relative">
                            <input type="email" id="email" name="email" class="form-control input-icon"
                                placeholder="name@mail.com" required>
                            <i class="bi bi-envelope icon-left"></i>
                        </div>
                        <div class="form-group mb-3 position-relative">
                            <input type="password" id="password" name="password" class="form-control input-icon"
                                placeholder="Contraseña" required>
                            <i class="bi bi-lock icon-left"></i>
                        </div>
                        <button type="submit" class="btn btn-login w-100">Iniciar sesión</button>
                        <div class="divider my-3 text-center text-muted">
                            <span class="px-2">O</span>
                        </div>
                        <button type="button" class="btn btn-outline-secondary w-100 google-btn">
                            <i class="bi bi-google me-2"></i> Iniciar con Google
                        </button>

                        <p class="text-center mt-3">¿Aún no tienes cuenta?
                            <a href="#" data-bs-toggle="modal" data-bs-target="#registerModal"
                                data-bs-dismiss="modal">Registrarse</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Registro -->
    <div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content position-relative">
                <button type="button" class="btn-close position-absolute top-0 end-0 m-3 z-3"
                    data-bs-dismiss="modal" aria-label="Close"></button>

                <div class="modal-body p-5">
                    <div class="text-center mb-4 image-login-user">
                        <img class="image-user" src="/images/logo_skill.png" alt="Logo SkillTrade">
                    </div>

                    <div class="container-title-login-modal">
                        <h5 id="registerModalLabel" class="text-center fw-bolder mb-2 title-login-modal">¡Crea tu cuenta!</h5>
                    </div>

                    <form id="registerForm" novalidate>
                        <div class="form-group mb-3 position-relative">
                            <input type="email" id="registerEmail" name="email" class="form-control input-icon"
                                placeholder="name@mail.com" required>
                            <i class="bi bi-envelope icon-left"></i>
                        </div>
                        <div class="form-group mb-3 position-relative">
                            <input type="password" id="registerPassword" name="password"
                                class="form-control input-icon" placeholder="Contraseña" required>
                            <i class="bi bi-lock icon-left"></i>
                        </div>
                        <div class="form-group mb-3 position-relative">
                            <input type="password" id="confirmPassword" name="confirmPassword"
                                class="form-control input-icon" placeholder="Confirmar contraseña" required>
                            <i class="bi bi-shield-lock icon-left"></i>
                        </div>

                        <button type="submit" class="btn btn-login w-100">Registrarse</button>

                        <div class="divider my-3 text-center text-muted">
                            <span class="px-2">O</span>
                        </div>

                        <button type="button" class="btn btn-outline-secondary w-100 google-btn">
                            <i class="bi bi-google me-2"></i> Registrarse con Google
                        </button>

                        <p class="text-center mt-3">¿Ya tienes cuenta?
                            <a href="#" data-bs-toggle="modal" data-bs-target="#loginModal"
                                data-bs-dismiss="modal">Inicia sesión</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal del Carrito -->
    <div class="modal fade" id="cartModal" tabindex="-1" aria-labelledby="cartModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cartModalLabel">
                        <i class="bi bi-cart text-primary-600"></i> Carrito de Compras
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="cart-items" class="mb-4">
                        <div class="text-center py-5">
                            <i class="bi bi-cart-x text-gray-400" style="font-size: 3rem;"></i>
                            <p class="text-gray-500 mt-3">Tu carrito está vacío</p>
                            <a href="/cursos" class="btn btn-primary mt-2">Explorar Cursos</a>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="w-100 d-flex justify-content-between align-items-center">
                        <div>
                            <strong>Total: <span id="cart-total">COP 0</span></strong>
                        </div>
                        <div>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            <button type="button" class="btn btn-primary" id="checkout-btn" disabled>
                                Proceder al Pago
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript específico por página -->
    <% if (typeof pageTitle !== 'undefined') { %>
        <% if (pageTitle === 'Admin Panel') { %>
            <script src="/js/adminpanel.js"></script>
        <% } else if (pageTitle === 'My Courses') { %>
            <script src="/js/miscursos.js"></script>
        <% } else if (pageTitle === 'Trade') { %>
            <script src="/js/intercambio.js"></script>
        <% } else if (pageTitle === 'User Trade') { %>
            <script src="/js/usertrade.js"></script>
        <% } else { %>
            <script src="/js/index.js"></script>
        <% } %>
    <% } else { %>
        <script src="/js/index.js"></script>
    <% } %>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Script principal -->
    <script src="/js/main.js"></script>
    
    <!-- Dark mode functionality -->
    <script>
        const toggleDarkMode = () => {
            document.documentElement.classList.toggle('dark');
            const icon = document.querySelector('#toggle-darkmode i');
            if (document.documentElement.classList.contains('dark')) {
                icon.className = 'bi bi-sun-fill text-lg';
            } else {
                icon.className = 'bi bi-moon-fill text-lg';
            }
        };
        
        document.getElementById('toggle-darkmode').addEventListener('click', toggleDarkMode);
        
        // Check for saved dark mode preference
        if (localStorage.getItem('darkMode') === 'true' || 
            (!localStorage.getItem('darkMode') && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
            document.querySelector('#toggle-darkmode i').className = 'bi bi-sun-fill text-lg';
        }
    </script>
</body>

</html> 