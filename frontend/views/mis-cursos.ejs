<div class="container py-5">
    <h1 class="mb-5">Mis Cursos</h1>
    
    <div class="row">
        <% if (cursos && cursos.length > 0) { %>
            <% cursos.forEach(curso => { %>
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <img src="/images/curso-default.jpg" class="card-img-top" alt="<%= curso.titulo %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= curso.titulo %></h5>
                            <p class="card-text"><%= curso.descripcion.substring(0, 100) %>...</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-primary"><%= curso.categoria.join(', ') %></span>
                                <span class="text-success fw-bold">$<%= curso.costo %></span>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex gap-2">
                                <a href="/curso/<%= curso._id %>" class="btn btn-primary btn-sm flex-fill">Ver Curso</a>
                                <button class="btn btn-success btn-sm">Continuar</button>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12 text-center py-5">
                <i class="bi bi-book display-1 text-muted"></i>
                <h3 class="mt-3">No tienes cursos a√∫n</h3>
                <p class="text-muted">Explora nuestros cursos y comienza tu aprendizaje.</p>
                <a href="/cursos" class="btn btn-primary">Explorar Cursos</a>
            </div>
        <% } %>
    </div>
</div> 