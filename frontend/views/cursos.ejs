<div class="container py-5">
    <div class="row">
        <!-- Filtros -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h5>Filtros</h5>
                </div>
                <div class="card-body">
                    <h6>Categorías</h6>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="categoria" id="todos" value="" checked>
                        <label class="form-check-label" for="todos">Todos</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="categoria" id="desarrollo" value="desarrollo-web">
                        <label class="form-check-label" for="desarrollo">Desarrollo Web</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="categoria" id="musica" value="musica">
                        <label class="form-check-label" for="musica">Música</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="categoria" id="diseno" value="diseno">
                        <label class="form-check-label" for="diseno">Diseño</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="categoria" id="marketing" value="marketing">
                        <label class="form-check-label" for="marketing">Marketing Digital</label>
                    </div>
                    
                    <hr>
                    
                    <h6>Precio</h6>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gratis">
                        <label class="form-check-label" for="gratis">Gratis</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="pago">
                        <label class="form-check-label" for="pago">De pago</label>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Lista de Cursos -->
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Cursos <%= categoria !== 'todos' ? `- ${categoria}` : '' %></h2>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-secondary" id="grid-view">
                        <i class="bi bi-grid"></i>
                    </button>
                    <button class="btn btn-outline-secondary" id="list-view">
                        <i class="bi bi-list"></i>
                    </button>
                </div>
            </div>
            
            <div class="row" id="cursos-container">
                <% if (cursos && cursos.length > 0) { %>
                    <% cursos.forEach(curso => { %>
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 curso-card">
                                <img src="/images/curso-default.jpg" class="card-img-top" alt="<%= curso.titulo %>">
                                <div class="card-body">
                                    <h5 class="card-title"><%= curso.titulo %></h5>
                                    <p class="card-text"><%= curso.descripcion.substring(0, 120) %>...</p>
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="badge bg-primary"><%= curso.categoria.join(', ') %></span>
                                        <span class="text-success fw-bold">$<%= curso.costo %></span>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <small class="text-muted">
                                            <i class="bi bi-person"></i> 
                                            <%= curso.owner ? curso.owner.usuario : 'Anónimo' %>
                                        </small>
                                        <small class="text-muted">
                                            <i class="bi bi-calendar"></i>
                                            <%= new Date(curso.fechaCreacion).toLocaleDateString() %>
                                        </small>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="d-flex gap-2">
                                        <a href="/curso/<%= curso._id %>" class="btn btn-primary btn-sm flex-fill">Ver Curso</a>
                                        <a href="/comprar/<%= curso._id %>" class="btn btn-success btn-sm">Comprar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-12 text-center py-5">
                        <i class="bi bi-book display-1 text-muted"></i>
                        <h3 class="mt-3">No hay cursos disponibles</h3>
                        <p class="text-muted">No se encontraron cursos con los filtros seleccionados.</p>
                    </div>
                <% } %>
            </div>
            
            <!-- Paginación -->
            <% if (cursos && cursos.length > 0) { %>
                <nav aria-label="Navegación de cursos" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Anterior</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Siguiente</a>
                        </li>
                    </ul>
                </nav>
            <% } %>
        </div>
    </div>
</div> 