<!-- Estadísticas -->
<div class="container py-5">
    <div class="row text-center">
        <div class="col-md-4">
            <div class="stat-card">
                <h3><%= totalCursos %></h3>
                <p>Cursos Disponibles</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <h3><%= totalUsuarios %></h3>
                <p>Usuarios Registrados</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <h3>∞</h3>
                <p>Posibilidades</p>
            </div>
        </div>
    </div>
</div>

<!-- Cursos Destacados -->
<div class="container py-5">
    <h2 class="text-center mb-5">Cursos Destacados</h2>
    <div class="row">
        <% if (cursos && cursos.length > 0) { %>
            <% cursos.forEach(curso => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="/images/curso-default.jpg" class="card-img-top" alt="<%= curso.titulo %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= curso.titulo %></h5>
                            <p class="card-text"><%= curso.descripcion.substring(0, 100) %>...</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-primary"><%= curso.categoria.join(', ') %></span>
                                <span class="text-success fw-bold">$<%= curso.costo %></span>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a href="/curso/<%= curso._id %>" class="btn btn-primary btn-sm">Ver Curso</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12 text-center">
                <p>No hay cursos disponibles en este momento.</p>
            </div>
        <% } %>
    </div>
    <div class="text-center mt-4">
        <a href="/cursos" class="btn btn-outline-primary">Ver Todos los Cursos</a>
    </div>
</div>

